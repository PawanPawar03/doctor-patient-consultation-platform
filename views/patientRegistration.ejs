<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css" />
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous"> -->
  
  <body>
    <section>
      <div class="container">
        <div class="image-container">
          <img src="/images/patient-regi.jpg" alt="Images" />
        </div>
        
        <div class="content">
          <div class="form">
            <h2>Patient Registration</h2>
            <div class="error-msg">
              <% if (message) { %>
                <p><strong><%= message %></strong></p>
              <% } %>
            
              <% if (errors && errors.length > 0) { %>
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              <% } %>  
            </div>

          
            <form action="/api/patientRegistration" method="post">
              <div class="input-box">
                <span>Enter Full Name</span>
                <input name='name' type="text"/>
              </div>
              <div class="input-box">
                <span>Enter Email Address</span>
                <input name='email' type="email" />
              </div>
              <div class="input-box">
                <span>Enter Address</span>
                <input name='address' type="text" />
              </div>
              <div class="input-box">
                <span>Enter Mobile No</span>
                <input name='mobno' type="text" />
              </div>
              <div class="input-box">
                <span>Enter Your Age</span>
                <input name='age' type="text" />
              </div>
              <div class="input-box">
                <span>Password</span>
                <input name='password' type="password" />
              </div>
              <div class="input-box">
                <span>Confirm Password</span>
                <input name='cpassword' type="password" />
              </div>
              <div class="input-box">
                <input id="Registration" type="submit" value="Sign Up" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script> -->

  </body>
</html>
